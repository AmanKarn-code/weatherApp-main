<!DOCTYPE html>
<html lang="en">

<head>
    {{>headLink}}
    

</head>

<body>
    <!-- navbar section -->
    {{>navbar}}

    <!-- main content section -->
    <div class="container-fluid">
        <div class="row">
            <div class="cd-md-10 col-12 mx-auto">
                <div class="search">
                    <form class="searchForm">
                        <input type="text" id="cityName" placeholder="enter the city name">
                        <button type="submit" id="searchbtn"><i class="fa fa-search"></i></button>
                    </form>
                    <div class="tempInfo">
                        <div class="firstLayer">
                            <p id="day"></p>
                            <p id="date"></p>
                        </div>
                            <p id="searchStatus"></p>
                        <div class="secondLayer">
                            <div class="hide" id="hide">
                            <p><span id="temp"></span> &deg; C</p>
                            <p id="tempStatus"><i class="fa fa-cloud"></i></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer section -->
    {{>footer}}
    <script src="./js/main.js"></script>
    <script>
       const weekday = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];

const d = new Date();
let day = weekday[d.getDay()];
document.getElementById("day").innerHTML = day;

const monthNames = ["January", "February", "March", "April", "May", "June",
  "July", "August", "September", "October", "November", "December"
];
let month=monthNames[d.getMonth()];
let date=d.getDate();
document.getElementById("date").innerHTML=date+" "+month;


    </script>
</body>

</html>